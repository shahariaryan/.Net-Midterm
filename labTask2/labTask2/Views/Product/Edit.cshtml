@model labTask2.Models.Entity.Product
@{
    ViewBag.Title = "Edit Product";
}

<h2>Edit Product</h2>

<form action="/Product/Edit" method="post">
    <table>
        <tr>
            <td><span><b>Product Id:</b></span></td>
            <td>
                <input type="text" name="Id" placeholder="Product Id" class="form-control" value="@Model.Id" disabled><br>
               
            </td>
        </tr>

        <tr>
            <td><span><b>Product Name:</b></span></td>
            <td>
                <input type="text" name="Name" placeholder="Product Name" class="form-control" value="@Model.Name"><br>
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

            </td>
        </tr>

        <tr>
            <td><span><b>Product Price:<b></span></td>
            <td>
                <input type="text" name="Price" placeholder="Product Price" class="form-control" value="@Model.Price"><br>
            </td>
        </tr>

        <tr>
            <td><span><b>Add Quantity:</b></span></td>
            <td>
                <input type="text" name="Quantity" placeholder="Qty" class="form-control" value="@Model.Quantity"><br>
            </td>
        </tr>
        <tr>
            <td><span><b>Description:</b></span></td>
            <td>
                <input type="text" name="Description" placeholder="Description" class="form-control" value="@Model.Description"><br>
            </td>
        </tr>

        <tr>
            <td><input type="submit" value="Edit Product" class="btn btn-success"></td>
        </tr>


    </table>
</form>

